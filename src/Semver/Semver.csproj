<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<AssemblyName>Semver</AssemblyName>
		<RootNamespace>Acklann.Semver</RootNamespace>
		<LangVersion>7.2</LangVersion>
	</PropertyGroup>

	<PropertyGroup Label="Package">
		<Title>SemverX</Title>
		<Version>0.0.24</Version>
		<AssemblyVersion>0.0.24</AssemblyVersion>
		<Description>A comprehensive implementation of Semantic Version (https://semver.org/).</Description>
		<PackageTags>semantic version</PackageTags>

		<Company>Ackara</Company>
		<Authors>Ackara</Authors>
		<Copyright>Copyright 2019 Ackara, All Rights Reserved.</Copyright>

		<PackageReleaseNotes>https://github.com/Ackara/SemverX/blob/master/release-notes.md</PackageReleaseNotes>
		<PackageIconUrl>https://raw.githubusercontent.com/Ackara/SemverX/master/art/icon.png</PackageIconUrl>
		<PackageLicenseFile>https://github.com/Ackara/SemverX/blob/master/license.txt</PackageLicenseFile>
		<PackageProjectUrl>https://github.com/Ackara/SemverX</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Ackara/SemverX.git</RepositoryUrl>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Memory" Version="4.5.3" />
	</ItemGroup>
</Project>